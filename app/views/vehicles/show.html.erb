<section id="inventory-list">
	<h1><%= (@vehicle.model.nil? ? "" : @vehicle.model.caption) %>&nbsp;<%= @vehicle.additional_details %></h1>
	<div class="section-content">
		<article>
			<dl class="multiple-table">
				<dt>Year / Make / Model</dt>
				<dd>
					<%= @vehicle.registration_year %> / 
					<%= (@vehicle.model.make.nil? ? "" : @vehicle.model.make.caption) %> / 
					<%= (@vehicle.model.nil? ? "" : @vehicle.model.caption) %>
				</dd>
				
				<dt>Registration</dt>
				<dd><%= @vehicle.registration %></dd>

				<dt><%= t(:price, :default => "Price") %></dt>
				<dd><%= number_to_currency(@vehicle.price) %></dd>

				<dt>Mileage</dt>
				<dd><%= @vehicle.mileage %>
					<%= t((@vehicle.mileage_warranty ? " (Warranted)" : "")) %>
				</dd>

				<dt>Body Type</dt>
				<dd><%= @vehicle.body_type %></dd>

				<dt>Doors</dt>
				<dd><%= @vehicle.doors %></dd>

				<dt>Fuel</dt>
				<dd><%= @vehicle.fuel %></dd>

				<dt>Color</dt>
				<dd><%= @vehicle.color %></dd>

				<dt>Equipment</dt>
				<dd>&nbsp;<%= @vehicle.equipment %></dd>
				<dt>Notes</dt>
				<dd>&nbsp;<%= @vehicle.notes %></dd>
			</dl>
		</article>
	</div>
</section>


