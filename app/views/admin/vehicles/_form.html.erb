
<%= form_for([:admin, @vehicle ], :html => { :class => "form-horizontal" }) do |f| %>
  <% if @vehicle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

      <ul>
        <% @vehicle.errors.full_messages.each do |msg| %><li><%= msg %></li><% end %>
      </ul>
    </div>
  <% end %>
      <div class="control-group">
      <%= f.label :model, t(:model, :default => "model").capitalize, :class => "control-label" %>
      <div class="controls">
        <%= f.collection_select :model_id, Model.all, :id, :caption, :include_blank => true %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :additional_details, t(:additional_details, :default => "additional_details").capitalize, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :additional_details %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :registration, t(:registration, :default => "registration").capitalize, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :registration %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :registration_year, t(:registration_year, :default => "registration_year").capitalize, :class => "control-label" %>
      <div class="controls">
        <%= f.number_field :registration_year %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :fuel, t(:fuel, :default => "fuel").capitalize, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :fuel %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :mileage, t(:mileage, :default => "mileage").capitalize, :class => "control-label" %>
      <div class="controls">
        <%= f.number_field :mileage %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :mileage_warranty, t(:mileage_warranty, :default => "mileage_warranty").capitalize, :class => "control-label" %>
      <div class="controls">
        <%= f.check_box :mileage_warranty %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :price, t(:price, :default => "price").capitalize, :class => "control-label" %>
      <div class="controls">
        <div class="input-prepend">
          <span class="add-on"><%= t("number.currency.format.unit", :default => "$") %></span><%= f.text_field :price %>
        </div>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :color, t(:color, :default => "color").capitalize, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :color %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :doors, t(:doors, :default => "doors").capitalize, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :doors %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :body_type, t(:body_type, :default => "body_type").capitalize, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :body_type %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :equipment, t(:equipment, :default => "equipment").capitalize, :class => "control-label" %>
      <div class="controls">
        <%= f.text_area :equipment, :class => "wysiwyg-editor" %>
      </div>
    </div>
    <%= f.hidden_field :equipment_typetext, :value => "html"  %>
    <script type="text/javascript">
      $('.wysiwyg-editor').wysihtml5({"html": true});
    </script>
    <div class="control-group">
      <%= f.label :notes, t(:notes, :default => "notes").capitalize, :class => "control-label" %>
      <div class="controls">
        <%= f.text_area :notes, :class => "wysiwyg-editor" %>
      </div>
    </div>
    <%= f.hidden_field :notes_typetext, :value => "html"  %>
    <script type="text/javascript">
      $('.wysiwyg-editor').wysihtml5({"html": true});
    </script>
<!-- Beautiful_scaffold - AddField - Do not remove -->
  <div class="form-actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>


