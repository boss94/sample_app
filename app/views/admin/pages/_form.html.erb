
<%= form_for([:admin, @page ], :html => { :class => "form-horizontal" }) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
        <% @page.errors.full_messages.each do |msg| %><li><%= msg %></li><% end %>
      </ul>
    </div>
  <% end %>
      <div class="control-group">
      <%= f.label :title, t(:title, :default => "title").capitalize, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :title %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :content, t(:content, :default => "content").capitalize, :class => "control-label" %>
      <div class="controls">
        <%= f.text_area :content, :class => "wysiwyg-editor" %>
      </div>
    </div>
    <%= f.hidden_field :content_typetext, :value => "html"  %>
    <script type="text/javascript">
      $('.wysiwyg-editor').wysihtml5({"html": true});
    </script>
<!-- Beautiful_scaffold - AddField - Do not remove -->
  <div class="form-actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>


